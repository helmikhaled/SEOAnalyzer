<h3>Plain Text</h3>

<div class="col-lg-12">
    <form id="textAnalysisForm">
        <div class="form-group">
            <textarea id="plainTextArea" class="form-control"  rows="3" placeholder="Text in English"></textarea>
        </div>
        <button id="analyzeTextButton" type="submit" class="btn btn-primary pull-right">Analyze</button>
    </form>
</div>
<div class="col-lg-12">
    <div id="wordResultPanel" class="panel panel-default hidden">
        <div class="panel-heading">Word Frequency</div>
        <div class="panel-body">
            <table id="textResult"
                   class="table table-striped"
                   data-paging="true"
                   data-paging-limit="10"
                   data-filtering="true"
                   data-filter-delay="1000"
                   data-sorting="true">
                <thead>
                    <tr>
                        <th>Word</th>
                        <th data-filterable="false" data-type="number">Frequency</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

    

    <a id="back" href='@Url.Action("Index", "PlainText")' class="pull-right hidden">Different Plain Text?</a>
</div>